        <Label Content="Filter goriva" HorizontalAlignment="Left" Margin="21,92,0,0" VerticalAlignment="Top"/>
        <Label Content="Filter kabine" HorizontalAlignment="Left" Margin="21,123,0,0" VerticalAlignment="Top"/>


        <RadioButton Content="Da" HorizontalAlignment="Left" Margin="165,33,0,0" VerticalAlignment="Top" GroupName="filtetUlja" RenderTransformOrigin="0.5,0.5">
            <RadioButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.334"/>
                    <TranslateTransform X="0.177" Y="-0.058"/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>
        <RadioButton Content="Ne"  HorizontalAlignment="Left" Margin="223,33,0,0" VerticalAlignment="Top" GroupName="filterUlja" RenderTransformOrigin="0.5,0.5">
