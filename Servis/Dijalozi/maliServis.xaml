            </RadioButton.RenderTransform>
        </RadioButton>
        <RadioButton Content="Ne"  HorizontalAlignment="Left" Margin="223,66,0,0" VerticalAlignment="Top" GroupName="filterVazduha" RenderTransformOrigin="0.5,0.5">
            <RadioButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.334"/>
                    <TranslateTransform X="0.005" Y="0.056"/>
