                    <RotateTransform Angle="0.334"/>
                    <TranslateTransform X="-0.177" Y="-0.059"/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>
        <RadioButton Content="Ne"  HorizontalAlignment="Left" Margin="223,98,0,0" VerticalAlignment="Top" GroupName="filterGoriva" RenderTransformOrigin="0.5,0.5">
            <RadioButton.RenderTransform>
                <TransformGroup>
